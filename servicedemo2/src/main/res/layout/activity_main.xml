<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.syl.servicedemo2.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="Hello World!"/>
    <Button
        android:id="@+id/btn_startService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" android:layout_below="@+id/textView"
        android:layout_marginTop="30dp" android:onClick="startService"
        android:text="开启服务"/>
    <Button
        android:id="@+id/btn_stopService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" android:layout_below="@+id/btn_startService"
        android:layout_marginTop="30dp" android:onClick="stopService"
        android:text="关闭服务"/>
    <Button
        android:id="@+id/btn_callMethodInService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" android:layout_below="@+id/btn_stopService"
        android:layout_marginTop="30dp" android:onClick="callMethodInService"
        android:text="调用服务中的方法"/>
</RelativeLayout>
