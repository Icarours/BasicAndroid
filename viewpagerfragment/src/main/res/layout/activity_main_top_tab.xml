<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout android:id="@+id/switch_tab_ll"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:baselineAligned="false"
                  android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/id_tab_chat_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dip">

            <TextView
                android:id="@+id/id_chat_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="聊天"
                android:textColor="#0000FF"
                android:textSize="15dip"/>
        </LinearLayout>
    </LinearLayout>

    <ImageView android:id="@+id/iv_tab_line"
               android:layout_width="wrap_content"
               android:layout_height="200dp"
               android:background="@drawable/tab_selected_pressed_holo"
               android:contentDescription="tab"/>
    <View android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="#000"></View>
</LinearLayout>